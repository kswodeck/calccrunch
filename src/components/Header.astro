---
import { Image } from "astro:assets";
import LogoHorizontal from "../../public/images/logos/logo-horizontal-dark.svg";
import SearchBar from "./SearchBar.astro";
import calculatorsData from "../data/calculators.json";
import categoriesData from "../data/categories.json";

const totalCalculators = calculatorsData?.calculators?.length;
---

<header class="site-header">
  <div class="container">
    <nav class="nav-wrapper">
      <!-- Logo -->
      <div class="logo">
        <a href="/" aria-label="CalcCrunch Home">
          <Image
            src={LogoHorizontal}
            alt="CalcCrunch Logo"
            width="200"
            height="60"
            format="webp"
            loading="eager"
          />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <ul class="nav-menu">
        {
          categoriesData?.categories?.map((cat) =>
            cat?.calculatorCount >= 2 ? (
              <li class="nav-item">
                <a href={`/categories/${cat?.slug}`} class="nav-link">
                  {cat?.nameShort || cat?.name}
                </a>
              </li>
            ) : (
              ""
            )
          )
        }
        <li class="nav-item">
          <a href="/calculators" class="nav-link">All Calculators</a>
        </li>
        <!-- <li class="nav-item">
          <a href="/about" class="nav-link">About</a>
        </li> -->
      </ul>

      <!-- Search -->
      <div class="header-search">
        <SearchBar placeholder="Search calculators..." />
      </div>

      <!-- Mobile Menu Toggle -->
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </nav>
  </div>

  <!-- Mobile Navigation Menu -->
  <div class="mobile-nav-overlay"></div>
  <div class="mobile-nav-menu">
    <div class="mobile-nav-header">
      <div class="mobile-nav-logo">
        <a href="/" aria-label="CalcCrunch Home">
          <Image
            src={LogoHorizontal}
            alt="CalcCrunch Logo"
            width="160"
            height="48"
            format="webp"
            loading="eager"
          />
        </a>
      </div>
      <button class="mobile-nav-close" aria-label="Close menu">
        <svg
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <!-- Mobile Search Bar -->
    <div class="mobile-nav-search">
      <SearchBar placeholder="Search calculators..." />
    </div>

    <!-- Mobile Navigation Links -->
    <ul class="mobile-nav-links">
      {
        categoriesData?.categories?.map((cat) =>
          cat?.calculatorCount >= 1 ? (
            <li class="mobile-nav-item">
              <a href={`/categories/${cat?.slug}`} class="mobile-nav-link">
                <span class="mobile-nav-icon">{cat?.icon || "ðŸ“Š"}</span>
                <span>{cat?.nameShort || cat?.name}</span>
                <svg
                  class="mobile-nav-arrow"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <polyline points="9 18 15 12 9 6" />
                </svg>
              </a>
            </li>
          ) : null
        )
      }
      <li class="mobile-nav-item">
        <a
          href="/calculators"
          class="mobile-nav-link mobile-nav-link-highlight"
        >
          <span class="mobile-nav-icon">ðŸ§®</span>
          <span>All Calculators</span>
          <span class="mobile-nav-badge">{totalCalculators}</span>
        </a>
      </li>
    </ul>
  </div>
</header>

<script>
  // Mobile Navigation Functionality
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
    const mobileNavMenu = document.querySelector(".mobile-nav-menu");
    const mobileNavOverlay = document.querySelector(".mobile-nav-overlay");
    const mobileNavClose = document.querySelector(".mobile-nav-close");
    const mobileNavLinks = document.querySelectorAll(".mobile-nav-link");
    const body = document.body;

    // Function to open mobile menu
    function openMobileMenu() {
      mobileNavMenu.classList.add("active");
      mobileNavOverlay.classList.add("active");
      body.style.overflow = "hidden"; // Prevent body scroll when menu is open

      // Animate hamburger to X
      mobileMenuToggle.classList.add("active");
    }

    // Function to close mobile menu
    function closeMobileMenu() {
      mobileNavMenu.classList.remove("active");
      mobileNavOverlay.classList.remove("active");
      body.style.overflow = ""; // Restore body scroll

      // Animate X back to hamburger
      mobileMenuToggle.classList.remove("active");
    }

    // Toggle menu on hamburger click
    if (mobileMenuToggle) {
      mobileMenuToggle.addEventListener("click", function () {
        if (mobileNavMenu.classList.contains("active")) {
          closeMobileMenu();
        } else {
          openMobileMenu();
        }
      });
    }

    // Close menu on X button click
    if (mobileNavClose) {
      mobileNavClose.addEventListener("click", closeMobileMenu);
    }

    // Close menu on overlay click
    if (mobileNavOverlay) {
      mobileNavOverlay.addEventListener("click", closeMobileMenu);
    }

    // Close menu when clicking on a link (for same-page navigation)
    mobileNavLinks.forEach((link) => {
      link.addEventListener("click", function () {
        // Small delay to allow navigation to start
        setTimeout(closeMobileMenu, 100);
      });
    });

    // Close menu on escape key
    document.addEventListener("keydown", function (e) {
      if (e.key === "Escape" && mobileNavMenu.classList.contains("active")) {
        closeMobileMenu();
      }
    });

    // Handle window resize - close menu if resizing to desktop
    let resizeTimer;
    window.addEventListener("resize", function () {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(function () {
        if (window.innerWidth > 968) {
          closeMobileMenu();
        }
      }, 250);
    });
  });
</script>

<style>
  /* Desktop Header Styles */
  .site-header {
    background: var(--color-white);
    box-shadow: var(--shadow-sm);
    position: sticky;
    top: 0;
    z-index: 1000;
    padding: var(--space-md) 0;
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
  }

  .logo img {
    height: 50px;
    width: auto;
    display: block;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: var(--space-lg);
    margin: 0;
    padding: 0;
  }

  .nav-link {
    font-family: var(--font-primary);
    font-weight: 600;
    color: var(--color-primary-blue);
    font-size: var(--text-base);
    transition: color var(--transition-fast);
  }

  .nav-link:hover {
    color: var(--color-accent-orange);
  }

  .header-search {
    flex: 1;
    max-width: 400px;
    margin-right: var(--space-sm);
  }

  /* Mobile Menu Toggle Button */
  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: var(--space-sm);
    position: relative;
    z-index: 1001;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 3px;
    background: var(--color-primary-blue);
    border-radius: 3px;
    transition: all var(--transition-base);
  }

  .mobile-menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-menu-toggle.active span:nth-child(2) {
    opacity: 0;
    transform: translateX(-10px);
  }

  .mobile-menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* Mobile Navigation Overlay */
  .mobile-nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity var(--transition-base),
      visibility var(--transition-base);
    z-index: 1998;
  }

  .mobile-nav-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Mobile Navigation Menu */
  .mobile-nav-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 85%;
    max-width: 320px;
    height: 100%;
    background: var(--color-white);
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.1);
    transition: right var(--transition-base) cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1999;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
  }

  .mobile-nav-menu.active {
    right: 0;
  }

  /* Mobile Nav Header */
  .mobile-nav-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-lg);
    border-bottom: 2px solid var(--color-gray);
    background: var(--color-lighter-blue);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .mobile-nav-logo img {
    height: 40px;
    width: auto;
  }

  .mobile-nav-close {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-white);
    border: 2px solid var(--color-gray);
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: all var(--transition-fast);
    color: var(--color-primary-blue);
  }

  .mobile-nav-close:hover {
    background: var(--color-accent-orange);
    border-color: var(--color-accent-orange);
    color: var(--color-white);
    transform: rotate(90deg);
  }

  .mobile-nav-close:focus {
    outline: 2px solid var(--color-accent-orange);
    outline-offset: 2px;
  }

  /* Mobile Search */
  .mobile-nav-search {
    padding: var(--space-lg);
    background: var(--color-gray-light);
    border-bottom: 1px solid var(--color-gray);
  }

  .mobile-nav-search :global(.search-container) {
    margin: 0;
  }

  .mobile-nav-search :global(.search-input) {
    font-size: var(--text-base);
    padding: var(--space-md);
  }

  /* Mobile Navigation Links */
  .mobile-nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    flex: 1;
  }

  .mobile-nav-item {
    border-bottom: 1px solid var(--color-gray);
  }

  .mobile-nav-link {
    display: flex;
    align-items: center;
    padding: var(--space-lg);
    color: var(--color-gray-dark);
    text-decoration: none;
    font-family: var(--font-primary);
    font-weight: 600;
    font-size: var(--text-base);
    transition: all var(--transition-fast);
    position: relative;
  }

  .mobile-nav-link:hover {
    background: var(--color-lighter-blue);
    color: var(--color-primary-blue);
    padding-left: calc(var(--space-lg) + 8px);
  }

  .mobile-nav-link:active {
    background: var(--color-light-blue);
  }

  .mobile-nav-link:focus {
    outline: 2px solid var(--color-accent-orange);
    outline-offset: -2px;
  }

  .mobile-nav-icon {
    margin-right: var(--space-md);
    font-size: 1.25rem;
    width: 24px;
    text-align: center;
    flex-shrink: 0;
  }

  .mobile-nav-arrow {
    margin-left: auto;
    color: var(--color-gray);
    transition: transform var(--transition-fast);
  }

  .mobile-nav-link:hover .mobile-nav-arrow {
    transform: translateX(4px);
    color: var(--color-accent-orange);
  }

  /* Highlight for All Calculators */
  .mobile-nav-link-highlight {
    background: linear-gradient(
      135deg,
      var(--color-lighter-blue) 0%,
      var(--color-white) 100%
    );
    color: var(--color-primary-blue);
    font-weight: 700;
  }

  .mobile-nav-link-highlight:hover {
    background: linear-gradient(
      135deg,
      var(--color-light-blue) 0%,
      var(--color-lighter-blue) 100%
    );
  }

  .mobile-nav-badge {
    margin-left: auto;
    background: var(--color-accent-orange);
    color: var(--color-white);
    padding: 2px 8px;
    border-radius: 12px;
    font-size: var(--text-sm);
    font-weight: 700;
    min-width: 24px;
    text-align: center;
  }

  /* Animation for menu items */
  .mobile-nav-menu.active .mobile-nav-item {
    animation: slideInRight var(--transition-base) ease-out forwards;
    opacity: 1;
  }

  .mobile-nav-menu.active .mobile-nav-item:nth-child(1) {
    animation-delay: 0.05s;
  }
  .mobile-nav-menu.active .mobile-nav-item:nth-child(2) {
    animation-delay: 0.1s;
  }
  .mobile-nav-menu.active .mobile-nav-item:nth-child(3) {
    animation-delay: 0.15s;
  }
  .mobile-nav-menu.active .mobile-nav-item:nth-child(4) {
    animation-delay: 0.2s;
  }
  .mobile-nav-menu.active .mobile-nav-item:nth-child(5) {
    animation-delay: 0.25s;
  }
  .mobile-nav-menu.active .mobile-nav-item:nth-child(6) {
    animation-delay: 0.3s;
  }
  .mobile-nav-menu.active .mobile-nav-item:nth-child(7) {
    animation-delay: 0.35s;
  }
  .mobile-nav-menu.active .mobile-nav-item:nth-child(8) {
    animation-delay: 0.4s;
  }

  @keyframes slideInRight {
    from {
      transform: translateX(30px);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  /* Smooth scrollbar for mobile menu */
  .mobile-nav-menu::-webkit-scrollbar {
    width: 6px;
  }

  .mobile-nav-menu::-webkit-scrollbar-track {
    background: var(--color-gray-light);
  }

  .mobile-nav-menu::-webkit-scrollbar-thumb {
    background: var(--color-accent-orange);
    border-radius: 3px;
  }

  .mobile-nav-menu::-webkit-scrollbar-thumb:hover {
    background: var(--color-accent-orange-dark);
  }

  /* Responsive Media Queries */
  @media (max-width: 968px) {
    .nav-menu {
      display: none;
    }

    .header-search {
      max-width: 250px;
    }

    .mobile-menu-toggle {
      display: flex !important;
    }
  }

  @media (max-width: 640px) {
    .header-search {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .mobile-nav-menu {
      width: 90%;
      max-width: none;
    }

    .mobile-nav-header {
      padding: var(--space-md);
    }

    .mobile-nav-search {
      padding: var(--space-md);
    }

    .mobile-nav-link {
      padding: var(--space-md) var(--space-lg);
      font-size: var(--text-sm);
    }

    .mobile-nav-icon {
      font-size: 1rem;
    }
  }
</style>
