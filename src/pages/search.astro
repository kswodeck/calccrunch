---
import BaseLayout from "../layouts/BaseLayout.astro";
import Breadcrumbs from "../components/Breadcrumbs.astro";
import AdUnit from "../components/AdUnit.astro";

const breadcrumbItems = [
  { label: "Home", href: "/" },
  { label: "Search", href: null },
];

// Get query from URL (for SSR meta tags)
const searchQuery = Astro.url.searchParams.get("q") || "";
---

<BaseLayout
  title={searchQuery
    ? `Search Results for "${searchQuery}" | CalcCrunch`
    : "Search Calculators | CalcCrunch"}
  description={searchQuery
    ? `Search results for ${searchQuery} on CalcCrunch. Find free calculators for financial planning, health tracking, and more.`
    : "Search our complete collection of 5+ free calculators. Find the perfect tool for your needs."}
  keywords={`calculator search, find calculator, ${searchQuery}`}
>
  <div class="search-page">
    <div class="container">
      <Breadcrumbs items={breadcrumbItems} />

      <!-- Search Header -->
      <div class="search-header">
        <h1>Search Calculators</h1>

        <!-- Search Form -->
        <form action="/search" method="GET" class="search-form-large">
          <div class="search-input-wrapper">
            <svg
              class="search-icon"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input
              type="search"
              name="q"
              placeholder="Search for calculators..."
              class="search-input-large"
              aria-label="Search calculators"
              autocomplete="off"
            />
            <button type="submit" class="btn btn-primary search-submit">
              Search
            </button>
          </div>
        </form>
      </div>

      <!-- Top Ad Unit -->
      <!-- <AdUnit slot="search-top" format="horizontal" /> -->

      <!-- Results Info -->
      <div class="results-info">
        <span id="results-count">Searching...</span>
        {
          searchQuery && (
            <span class="results-query">
              for "<strong id="search-query">{searchQuery}</strong>"
            </span>
          )
        }
      </div>

      <!-- Search Results Container -->
      <div id="search-results" class="search-results">
        <!-- Results will be inserted here by JavaScript -->
        <div class="loading-state">
          <div class="loading-spinner"></div>
          <p>Searching calculators...</p>
        </div>
      </div>

      <!-- Bottom Ad Unit -->
      <!-- <AdUnit slot="search-bottom" format="rectangle" /> -->
    </div>
  </div>
</BaseLayout>

<style>
  .search-page {
    padding: var(--space-xl) 0 var(--space-3xl);
    min-height: 100vh;
  }

  /* Search Header */
  .search-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .search-header h1 {
    color: var(--color-primary-blue);
    font-size: var(--text-5xl);
    margin-bottom: var(--space-xl);
  }

  .search-form-large {
    max-width: 700px;
    margin: 0 auto;
  }

  .search-input-wrapper {
    display: flex;
    align-items: center;
    background: var(--color-white);
    border: 3px solid var(--color-gray);
    border-radius: var(--border-radius-lg);
    padding: var(--space-sm);
    box-shadow: var(--shadow-lg);
    transition: border-color var(--transition-fast);
  }

  .search-input-wrapper:focus-within {
    border-color: var(--color-accent-orange);
  }

  .search-icon {
    color: var(--color-gray-dark);
    opacity: 0.5;
    margin-left: var(--space-md);
    flex-shrink: 0;
  }

  .search-input-large {
    flex: 1;
    padding: var(--space-md) var(--space-lg);
    border: none;
    font-size: var(--text-xl);
    font-family: var(--font-body);
    background: transparent;
  }

  .search-input-large:focus {
    outline: none;
  }

  .search-submit {
    padding: var(--space-md) var(--space-xl);
    font-size: var(--text-lg);
    white-space: nowrap;
  }

  /* Results Info */
  .results-info {
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-lg);
    border-bottom: 2px solid var(--color-gray);
    font-size: var(--text-lg);
    color: var(--color-gray-dark);
  }

  .results-query {
    margin-left: var(--space-sm);
  }

  .results-query strong {
    color: var(--color-primary-blue);
  }

  /* Search Results */
  .search-results {
    margin-bottom: var(--space-3xl);
  }

  .search-category-section {
    margin-bottom: var(--space-3xl);
  }

  .category-header {
    color: var(--color-primary-blue);
    font-size: var(--text-2xl);
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-md);
    border-bottom: 2px solid var(--color-light-blue);
  }

  .search-results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--space-xl);
  }

  /* Loading State */
  .loading-state {
    text-align: center;
    padding: var(--space-3xl);
  }

  .loading-spinner {
    width: 50px;
    height: 50px;
    border: 4px solid var(--color-gray);
    border-top-color: var(--color-accent-orange);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto var(--space-lg);
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  /* No Results */
  .no-results {
    text-align: center;
    padding: var(--space-3xl);
    background: var(--color-gray-light);
    border-radius: var(--border-radius-lg);
  }

  .no-results-icon {
    font-size: 5rem;
    margin-bottom: var(--space-xl);
  }

  .no-results h2 {
    color: var(--color-primary-blue);
    font-size: var(--text-3xl);
    margin-bottom: var(--space-lg);
  }

  .no-results p {
    font-size: var(--text-lg);
    color: var(--color-gray-dark);
    margin-bottom: var(--space-2xl);
  }

  .suggestions {
    margin: var(--space-2xl) 0;
  }

  .suggestions h3 {
    color: var(--color-primary-blue);
    font-size: var(--text-xl);
    margin-bottom: var(--space-lg);
  }

  .suggestion-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
    justify-content: center;
    margin-bottom: var(--space-2xl);
  }

  .suggestion-tag {
    background: var(--color-white);
    color: var(--color-primary-blue);
    padding: var(--space-sm) var(--space-lg);
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    border: 2px solid var(--color-light-blue);
    transition: all var(--transition-fast);
  }

  .suggestion-tag:hover {
    background: var(--color-accent-orange);
    color: var(--color-white);
    border-color: var(--color-accent-orange);
    transform: translateY(-2px);
  }

  /* Search Suggestions Dropdown */
  :global(.search-suggestions) {
    background: var(--color-white);
    border: 2px solid var(--color-light-blue);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-xl);
    max-height: 400px;
    overflow-y: auto;
    z-index: 1000;
  }

  :global(.suggestion-item) {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-lg);
    text-decoration: none;
    border-bottom: 1px solid var(--color-gray);
    transition: background var(--transition-fast);
  }

  :global(.suggestion-item:last-child) {
    border-bottom: none;
  }

  :global(.suggestion-item:hover) {
    background: var(--color-lighter-blue);
  }

  :global(.suggestion-icon) {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  :global(.suggestion-content) {
    flex: 1;
  }

  :global(.suggestion-title) {
    color: var(--color-primary-blue);
    font-weight: 600;
    font-size: var(--text-base);
  }

  :global(.suggestion-category) {
    color: var(--color-gray-dark);
    font-size: var(--text-sm);
    opacity: 0.7;
  }

  /* Toast Notifications */
  :global(.search-toast) {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: var(--color-error);
    color: var(--color-white);
    padding: var(--space-lg) var(--space-xl);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-xl);
    opacity: 0;
    transform: translateY(20px);
    transition: all var(--transition-base);
    z-index: 10000;
  }

  :global(.search-toast.show) {
    opacity: 1;
    transform: translateY(0);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .search-header h1 {
      font-size: var(--text-3xl);
    }

    .search-input-wrapper {
      flex-wrap: wrap;
    }

    .search-input-large {
      width: 100%;
      order: 1;
    }

    .search-icon {
      order: 0;
    }

    .search-submit {
      order: 2;
      width: 100%;
      margin-top: var(--space-sm);
    }

    .search-results-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .search-input-large {
      font-size: var(--text-base);
    }

    .results-info {
      font-size: var(--text-base);
    }
  }
</style>

<script>
  import "../scripts/search.js";
</script>
