const values = [
  {
    icon: "üíØ",
    title: "Always Free",
    description:
      "Every calculator, every feature, completely free. No subscriptions, no hidden fees, no catches. We believe financial tools should be accessible to everyone.",
  },
  {
    icon: "üîí",
    title: "Privacy First",
    description:
      "Your data stays on your device. We don't store your calculations, sell your information, or track your activity. Your privacy is non-negotiable.",
  },
  {
    icon: "‚úÖ",
    title: "Accuracy & Transparency",
    description:
      "All our calculators use proven formulas and are thoroughly tested. We show you exactly how we calculate results‚Äîno black boxes, no mysteries.",
  },
  {
    icon: "üöÄ",
    title: "Simple & Fast",
    description:
      "No registration, no downloads, no complexity. Just open a calculator, enter your numbers, and get instant results. That's how it should be.",
  },
];

const team = [
  {
    role: "Our Mission",
    icon: "üéØ",
    description:
      "To empower people to make better decisions by providing free, accurate, and easy-to-use calculators for life's most important calculations.",
  },
  {
    role: "Our Vision",
    icon: "üåü",
    description:
      "A world where everyone has instant access to the tools they need to understand their finances, health, and plans‚Äîwithout barriers or costs.",
  },
  {
    role: "Our Commitment",
    icon: "ü§ù",
    description:
      "To remain 100% free forever, continuously improve our tools based on user feedback, and never compromise on accuracy or user privacy.",
  },
];

const features = [
  "No registration or sign-up required",
  "Works on any device‚Äîphone, tablet, or desktop",
  "All calculations happen in your browser (privacy)",
  "Fast loading and instant results",
  "Thoroughly tested and verified formulas",
  "Regular updates and new calculators",
  "Mobile-optimized for on-the-go calculations",
  "Ad-supported to keep everything free",
];
---

<BaseLayout
  title="About CalcCrunch - Free Online Calculator Tools"
  description="Learn about CalcCrunch's mission to provide free, accurate calculators for everyone. Discover our story, values, and commitment to user privacy."
  keywords="about calccrunch, free calculator tools, online calculator mission, calculator website"
>
  <div class="about-page">
    <div class="container">
      <Breadcrumbs items={breadcrumbItems} />
    </div>

    <!-- Hero Section -->
    <section class="about-hero bg-gradient">
      <div class="container">
        <div class="hero-content">
          <div class="hero-text">
            <h1 class="text-white">About CalcCrunch</h1>
            <p class="hero-tagline text-white">
              Making Complex Calculations Simple Since 2025
            </p>
            <p class="hero-description text-white">
              We believe everyone deserves access to powerful calculation tools
              without paywalls, registrations, or complexity. That's why we
              built CalcCrunch‚Äîa completely free platform with {
                totalCalculators
              }+ calculators for financial planning, health tracking, home
              projects, and everyday decisions.
            </p>
          </div>

          <div class="hero-logo">
            <Image
              src="/images/logos/logo-full.png"
              alt="CalcCrunch Logo"
              width="400"
              height="400"
              loading="eager"
              format="webp"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <!-- <section class="stats-section">
      <div class="container">
        <div class="stats-grid">
          {stats.map(stat => (
            <div class="stat-card">
              <div class="stat-icon">{stat.icon}</div>
              <div class="stat-number">{stat.number}</div>
              <div class="stat-label">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section> -->

    <!-- Story Section -->
    <section class="story-section">
      <div class="container">
        <div class="story-content">
          <div class="story-text">
            <h2>Our Story</h2>
            <p>
              CalcCrunch was born from a simple frustration: why are so many
              online calculators buried behind paywalls, registration forms, or
              cluttered with intrusive ads that make them unusable?
            </p>
            <p>
              We started with a mortgage calculator for a friend buying their
              first home. They needed a simple tool to understand their monthly
              payments, but every calculator we found was either incomplete,
              confusing, or required an email address just to see basic results.
            </p>
            <p>
              That's when we realized: <strong
                >there had to be a better way.</strong
              >
            </p>
            <p>
              So we built CalcCrunch‚Äîa platform where every calculator is
              completely free, requires no registration, respects your privacy,
              and actually works well on mobile. What started as one calculator
              has grown into {totalCalculators}+ tools across {totalCategories} categories,
              used by our beloved community every month.
            </p>
            <p class="story-highlight">
              Our promise is simple: <strong
                >Free tools. Accurate results. No BS.</strong
              >
            </p>
          </div>

          <!-- <div class="story-image">
            <Image
              src="/images/heroes/hero-alt-1.png"
              alt="CalcCrunch Calculators"
              width="500"
              height="500"
              format="webp"
              loading="lazy"
            />
          </div> -->
        </div>
      </div>
    </section>

    <!-- Ad Unit -->
    <AdUnit slot="1019949885" format="autorelaxed" />

    <!-- Values Section -->
    <section class="values-section bg-light">
      <div class="container">
        <div class="section-header text-center">
          <h2>Our Values</h2>
          <p>The principles that guide everything we do</p>
        </div>

        <div class="values-grid">
          {
            values.map((value) => (
              <div class="value-card">
                <div class="value-icon">{value.icon}</div>
                <h3>{value.title}</h3>
                <p>{value.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Mission/Vision Section -->
    <section class="mission-section">
      <div class="container">
        <div class="mission-grid">
          {
            team.map((item) => (
              <div class="mission-card">
                <div class="mission-icon">{item.icon}</div>
                <h3>{item.role}</h3>
                <p>{item.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- What We Offer Section -->
    <section class="offer-section bg-light">
      <div class="container">
        <div class="offer-content">
          <div class="offer-text">
            <h2>What Makes CalcCrunch Different?</h2>
            <p class="offer-intro">
              We're not just another calculator website. We're a commitment to
              accessibility, accuracy, and user experience.
            </p>

            <ul class="features-list">
              {
                features.map((feature) => (
                  <li>
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                    >
                      <polyline points="20 6 9 17 4 12" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))
              }
            </ul>
          </div>

          <div class="offer-visual">
            <div class="feature-box">
              <div class="feature-box-header bg-gradient">
                <h4 class="text-white">üéØ Built For You</h4>
              </div>
              <div class="feature-box-content">
                <p>
                  Every calculator is designed with real people in mind. We test
                  each tool with actual users to ensure it's intuitive, fast,
                  and delivers exactly the information you need.
                </p>
                <div class="feature-stats">
                  <div class="mini-stat">
                    <strong>0.5s</strong>
                    <span>Average load time</span>
                  </div>
                  <div class="mini-stat">
                    <strong>100%</strong>
                    <span>Mobile optimized</span>
                  </div>
                  <div class="mini-stat">
                    <strong>24/7</strong>
                    <span>Always available</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Ad Unit -->
    <AdUnit slot="4441095467" format="auto" />

    <!-- How We Make Money Section -->
    <section class="transparency-section">
      <div class="container">
        <div class="transparency-box">
          <h2>üí° How We Keep CalcCrunch Free</h2>
          <p class="transparency-intro">
            We believe in complete transparency. Here's how we sustain
            CalcCrunch while keeping everything free for you:
          </p>

          <div class="transparency-grid">
            <div class="transparency-item">
              <h4>üì¢ Minimal Advertising</h4>
              <p>
                We display respectful, non-intrusive ads from Google AdSense.
                We've carefully placed them to not interfere with your
                calculations or reading experience.
              </p>
            </div>

            <div class="transparency-item">
              <h4>ü§ù Affiliate Partnerships</h4>
              <p>
                When we recommend trusted partners (like mortgage lenders or
                fitness apps), we may earn a small commission if you use their
                services. We only recommend products we'd use ourselves.
              </p>
            </div>

            <div class="transparency-item">
              <h4>‚ùå What We DON'T Do</h4>
              <p>
                We don't sell your data. We don't require registration to
                "unlock" calculators. We don't have premium tiers. Everything is
                free, always.
              </p>
            </div>
          </div>

          <p class="transparency-footer">
            <strong>Our commitment:</strong> We'll never compromise user experience
            or privacy to make money. If we can't sustain CalcCrunch ethically, we
            won't sustain it at all.
          </p>
        </div>
      </div>
    </section>

    <!-- Community Section -->
    <section class="community-section bg-gradient">
      <div class="container">
        <div class="community-content text-center">
          <h2 class="text-white">Join the CalcCrunch Community</h2>
          <p class="text-white community-text">
            Our growing community trusts CalcCrunch for even the most mundane
            calculations. Whether you're planning a home purchase, tracking your
            fitness goals, or making business decisions, we're here to help.
          </p>

          <div class="community-actions">
            <a href="/calculators" class="btn btn-secondary">
              Browse All Calculators
            </a>
            <!-- TODO: Create About Us page and link to it -->
            <!-- <a href="/contact" class="btn btn-primary"> Get in Touch </a> -->
          </div>
        </div>
      </div>
    </section>

    <!-- Email Capture -->
    <!-- <div class="container">
      <EmailCapture
        calculatorType="about"
        headline="üì¨ Stay Updated"
        description="Get notified when we add new calculators, features, and tools. Join our community of smart decision-makers."
        buttonText="Subscribe to Updates"
      />
    </div> -->

    <!-- FAQ Section -->
    <section class="faq-section">
      <div class="container">
        <div class="section-header text-center">
          <h2>Frequently Asked Questions</h2>
        </div>

        <div class="faq-grid">
          <div class="faq-item">
            <h3>Is CalcCrunch really free?</h3>
            <p>
              Yes, 100% free. Every calculator, every feature, no credit card
              required, no subscriptions, no hidden fees. Ever.
            </p>
          </div>

          <div class="faq-item">
            <h3>Do I need to create an account?</h3>
            <p>
              Nope! Just visit any calculator and start using it immediately. No
              registration, no email required, no barriers.
            </p>
          </div>

          <div class="faq-item">
            <h3>How accurate are your calculators?</h3>
            <p>
              Very accurate. We use industry-standard formulas and test
              extensively. However, calculators are for estimation
              purposes‚Äîconsult professionals for official advice.
            </p>
          </div>

          <div class="faq-item">
            <h3>Do you store my calculation data?</h3>
            <p>
              No. All calculations happen in your browser. We don't store,
              track, or save your inputs or results. Your data stays 100%
              private.
            </p>
          </div>

          <div class="faq-item">
            <h3>Can I use CalcCrunch on my phone?</h3>
            <p>
              Absolutely! Every calculator is fully optimized for mobile
              devices. Calculate on the go, anytime, anywhere.
            </p>
          </div>

          <div class="faq-item">
            <h3>How can I suggest a new calculator?</h3>
            <p>
              We love feedback! Contact us through our <a href="/contact"
                >contact page</a
              >
              with your calculator idea. We read every suggestion.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="final-cta">
      <div class="container text-center">
        <h2>Ready to Start Calculating?</h2>
        <p>
          Join our community and let CalcCrunch assist you with accurate, free
          calculations.
        </p>
        <a href="/calculators" class="btn btn-primary btn-lg">
          Explore All Calculators ‚Üí
        </a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .about-page {
    padding-bottom: var(--space-3xl);
  }

  /* Hero Section */
  .about-hero {
    padding: var(--space-3xl) 0;
    margin-bottom: var(--space-3xl);
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .about-hero h1 {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
    color: var(--color-white);
  }

  .hero-tagline {
    font-size: var(--text-2xl);
    font-weight: 600;
    margin-bottom: var(--space-lg);
    opacity: 0.95;
  }

  .hero-description {
    font-size: var(--text-lg);
    line-height: 1.8;
    opacity: 0.9;
  }

  .hero-logo {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-logo img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.3));
  }

  /* Stats Section */
  .stats-section {
    margin: calc(var(--space-3xl) * -1) 0 var(--space-3xl);
    position: relative;
    z-index: 10;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-xl);
  }

  .stat-card {
    background: var(--color-white);
    padding: var(--space-2xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
    text-align: center;
    border: 2px solid var(--color-gray);
    transition: all var(--transition-base);
  }

  .stat-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-accent-orange);
  }

  .stat-icon {
    font-size: 3rem;
    margin-bottom: var(--space-md);
  }

  .stat-number {
    font-size: var(--text-4xl);
    font-weight: 800;
    color: var(--color-primary-blue);
    font-family: var(--font-primary);
    margin-bottom: var(--space-xs);
  }

  .stat-label {
    color: var(--color-gray-dark);
    font-weight: 600;
    font-size: var(--text-base);
  }

  /* Story Section */
  .story-section {
    padding: var(--space-3xl) 0;
  }

  .story-content {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .story-text h2 {
    color: var(--color-primary-blue);
    font-size: var(--text-4xl);
    margin-bottom: var(--space-xl);
  }

  .story-text p {
    font-size: var(--text-lg);
    line-height: 1.8;
    color: var(--color-gray-dark);
    margin-bottom: var(--space-lg);
  }

  .story-highlight {
    background: var(--color-lighter-blue);
    padding: var(--space-lg);
    border-radius: var(--border-radius);
    border-left: 4px solid var(--color-accent-orange);
    font-size: var(--text-xl);
    font-style: italic;
  }

  .story-image {
    display: flex;
    justify-content: center;
  }

  .story-image img {
    max-width: 100%;
    height: auto;
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
  }

  /* Values Section */
  .values-section {
    padding: var(--space-3xl) 0;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2xl);
    margin-top: var(--space-2xl);
  }

  .value-card {
    background: var(--color-white);
    padding: var(--space-2xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    border: 2px solid var(--color-gray);
    transition: all var(--transition-base);
  }

  .value-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-accent-orange);
  }

  .value-icon {
    font-size: 3rem;
    margin-bottom: var(--space-lg);
  }

  .value-card h3 {
    color: var(--color-primary-blue);
    font-size: var(--text-2xl);
    margin-bottom: var(--space-md);
  }

  .value-card p {
    color: var(--color-gray-dark);
    line-height: 1.7;
    font-size: var(--text-base);
  }

  /* Mission Section */
  .mission-section {
    padding: var(--space-3xl) 0;
  }

  .mission-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-2xl);
  }

  .mission-card {
    background: linear-gradient(
      135deg,
      var(--color-lighter-blue) 0%,
      var(--color-white) 100%
    );
    padding: var(--space-2xl);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-md);
    text-align: center;
    border: 2px solid var(--color-light-blue);
  }

  .mission-icon {
    font-size: 3.5rem;
    margin-bottom: var(--space-lg);
  }

  .mission-card h3 {
    color: var(--color-primary-blue);
    font-size: var(--text-xl);
    margin-bottom: var(--space-md);
  }

  .mission-card p {
    color: var(--color-gray-dark);
    line-height: 1.7;
  }

  /* Offer Section */
  .offer-section {
    padding: var(--space-3xl) 0;
  }

  .offer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  .offer-text h2 {
    color: var(--color-primary-blue);
    font-size: var(--text-4xl);
    margin-bottom: var(--space-lg);
  }

  .offer-intro {
    font-size: var(--text-xl);
    color: var(--color-gray-dark);
    margin-bottom: var(--space-xl);
    line-height: 1.7;
  }

  .features-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .features-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
    font-size: var(--text-lg);
    color: var(--color-gray-dark);
  }

  .features-list svg {
    flex-shrink: 0;
    color: var(--color-success);
    margin-top: 2px;
  }

  .feature-box {
    background: var(--color-white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
    border: 2px solid var(--color-primary-blue);
  }

  .feature-box-header {
    padding: var(--space-xl);
    text-align: center;
  }

  .feature-box-header h4 {
    color: var(--color-white);
    margin: 0;
    font-size: var(--text-2xl);
  }

  .feature-box-content {
    padding: var(--space-2xl);
  }

  .feature-box-content p {
    color: var(--color-gray-dark);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
  }

  .feature-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
    padding-top: var(--space-lg);
    border-top: 2px solid var(--color-gray);
  }

  .mini-stat {
    text-align: center;
  }

  .mini-stat strong {
    display: block;
    font-size: var(--text-2xl);
    color: var(--color-accent-orange);
    font-family: var(--font-primary);
    margin-bottom: var(--space-xs);
  }

  .mini-stat span {
    display: block;
    font-size: var(--text-sm);
    color: var(--color-gray-dark);
  }

  /* Transparency Section */
  .transparency-section {
    padding: var(--space-3xl) 0;
  }

  .transparency-box {
    background: linear-gradient(135deg, #fff8dc 0%, var(--color-white) 100%);
    padding: var(--space-3xl);
    border-radius: var(--border-radius-lg);
    border: 3px solid var(--color-warning);
  }

  .transparency-box h2 {
    color: var(--color-primary-blue);
    text-align: center;
    margin-bottom: var(--space-lg);
  }

  .transparency-intro {
    text-align: center;
    font-size: var(--text-xl);
    color: var(--color-gray-dark);
    margin-bottom: var(--space-2xl);
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .transparency-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .transparency-item {
    background: var(--color-white);
    padding: var(--space-xl);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
  }

  .transparency-item h4 {
    color: var(--color-primary-blue);
    margin-bottom: var(--space-md);
    font-size: var(--text-lg);
  }

  .transparency-item p {
    color: var(--color-gray-dark);
    line-height: 1.6;
    margin: 0;
  }

  .transparency-footer {
    text-align: center;
    font-size: var(--text-lg);
    color: var(--color-gray-dark);
    padding-top: var(--space-xl);
    border-top: 2px solid var(--color-warning);
  }

  /* Community Section */
  .community-section {
    padding: var(--space-3xl) 0;
    margin: var(--space-3xl) 0;
  }

  .community-content h2 {
    color: var(--color-white);
    font-size: var(--text-4xl);
    margin-bottom: var(--space-lg);
  }

  .community-text {
    font-size: var(--text-xl);
    max-width: 800px;
    margin: 0 auto var(--space-2xl);
    line-height: 1.8;
    opacity: 0.95;
